<widgets>
    <dsmanager_manager_widget type="dsmanager/widget" module="dsmanager">
        <name>manager</name>
        <description>Manager information</description>
        <parameters>
            <title translate="label">
                <label>Title Text</label>
                <visible>1</visible>
                <type>text</type>
                <value>Some random useless text</value>
            </title>
            <format translate="label">
                <label>Date Format</label>
                <visible>1</visible>
                <type>select</type>
                <value>system</value>
                <values>
                    <default translate="label">
                        <value>system</value>
                        <label>System Date Format</label>
                    </default>
                    <locale_format translate="label">
                        <value>localized</value>
                        <label>Localized Date Format</label>
                    </locale_format>
                </values>
            </format>
            <template translate="label">
                <label>Template</label>
                <visible>1</visible>
                <type>select</type>
                <value>dsmanager/block.phtml</value>
                <values>
                    <default translate="label">
                        <value>dsmanager/block.phtml</value>
                        <label>Block</label>
                    </default>
                    <locale_format translate="label">
                        <value>dsmanager/inline.phtml</value>
                        <label>Inline</label>
                    </locale_format>
                </values>
            </template>
        </parameters>
    </dsmanager_manager_widget>
</widgets>